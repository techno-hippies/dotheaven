# ============================================================================
# Heaven AA Gateway — EigenCompute Environment Variables
# Copy to .env and fill in values before deploying.
# ============================================================================

# ── Chain Configuration ─────────────────────────────────────────────────────
RPC_URL=https://carrot.megaeth.com/rpc
CHAIN_ID=6343

# ── Deployed Contracts ──────────────────────────────────────────────────────
ENTRYPOINT=0x0000000071727De22E5E9d8BAf0edAc6f37da032
HEAVEN_FACTORY=0xB66BF4066F40b36Da0da34916799a069CBc79408
HEAVEN_PAYMASTER=0xEb3C4c145AE16d7cC044657D1632ef08d6B2D5d9
SCROBBLE_V4=0xD41a8991aDF67a1c4CCcb5f7Da6A01a601eC3F37
ACCOUNT_IMPLEMENTATION=0xA17Fd81A1fFEC9f5694343dd4BFe29847B0eb9E7

# ── Secret Keys (inject via EigenCompute encrypted env vars) ────────────────
# Paymaster signer — signs UserOp approvals (controls gas sponsorship)
PAYMASTER_SIGNER_KEY=0x...

# Bundler executor — submits bundles to EntryPoint (needs ETH for gas)
BUNDLER_EXECUTOR_KEY=0x...

# Bundler utility — used by Alto for internal operations
BUNDLER_UTILITY_KEY=0x...

# ── Gateway Auth (optional, recommended for production) ─────────────────────
# API key required on /quotePaymaster and /sendUserOp
# GATEWAY_API_KEY=

# ── Gas Caps ────────────────────────────────────────────────────────────────
# MegaEVM gas costs differ from standard EVM — keep these generous
MAX_CALL_GAS_LIMIT=5000000
MAX_VERIFICATION_GAS_LIMIT=3000000
MAX_PRE_VERIFICATION_GAS=500000

# ── Paymaster ───────────────────────────────────────────────────────────────
PAYMASTER_VALIDITY_SECONDS=180

# ── Ports (internal) ───────────────────────────────────────────────────────
# Gateway port (exposed to internet via EigenCompute EXPOSE)
PORT=3337
# Alto port (localhost only, not exposed)
ALTO_PORT=4337
