{
  "name": "voice-agent-service",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "check": "tsc --noEmit",
    "test:unit": "bun run check",
    "test:smoke": "bun run tests/smoke/auth-nonce.smoke.ts",
    "db:create": "wrangler d1 create ${VOICE_AGENT_D1_DATABASE:-${D1_DATABASE:-voice-agent}}",
    "db:migrate": "wrangler d1 execute ${VOICE_AGENT_D1_DATABASE:-${D1_DATABASE:-voice-agent}} --file=schema.sql",
    "db:migrate:local": "wrangler d1 execute ${VOICE_AGENT_D1_DATABASE:-${D1_DATABASE:-voice-agent}} --local --file=schema.sql"
  },
  "dependencies": {
    "agora-token": "^2.0.3",
    "ethers": "^6.13.5",
    "hono": "^4.6.0",
    "jose": "^5.9.0",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "typescript": "^5.7.2",
    "wrangler": "^3.99.0"
  }
}
